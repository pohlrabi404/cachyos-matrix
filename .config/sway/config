### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Terminal
set $term kitty
# App launcher 
set $menu $HOME/.config/rofi/launchers/type-3/launcher.sh 
set $powermenu $HOME/.config/rofi/powermenu/type-4/powermenu.sh 
# Font
exec fcitx5

# Auto tiling
exec_always autotiling

### Appearance
# window corner radius in px
corner_radius 10
gaps {
  inner 10
  outer 10
}

# Border
default_border none 
client.focused #000000 #000000 #000000 #966fd6 #966fd6
# client.focused #000000 #000000 #000000 #000000 #000000

# Window background blur
blur on 
blur_xray disable 
blur_passes 1
blur_radius 10
blur_noise 0.02
blur_brightness 0.9
blur_contrast 0.9
blur_saturation 1.1

shadows on 
shadows_on_csd on 
shadow_blur_radius 10
shadow_color #b1a2ca
shadow_inactive_color #000000
shadow_offset 0 0

# Opacity
for_window [all] opacity 0.90
for_window [title=".*YouTube.*"] opacity 1
for_window [app_id="mpv"] opacity 1
for_window [class="steam_app_2420510"] opacity 1

# inactive window fade amount. 0.0 = no dimming, 1.0 = fully dimmed
default_dim_inactive 0.3
dim_inactive_colors.unfocused #000000FF
dim_inactive_colors.urgent #900000FF

# Move minimized windows into Scratchpad (enable|disable)
scratchpad_minimize disable

### Output configuration
#
# Change background paper here
exec swww-daemon & swww img $HOME/backgrounds/rain.gif
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
